#include<stdio.h>

int main() {
    int arr[5] = {0}; // Simple fixed size array
    int size = 0;
    int choice, i, num, pos;
    
    printf("Array Program Started!\n");
    
    // CREATE
    printf("\n--- CREATE ARRAY ---");
    printf("\nHow many numbers? (max 5): ");
    scanf("%d", &size);
    printf("Enter %d numbers: ", size);
    for(i=0; i<size; i++) {
        scanf("%d", &arr[i]);
    }
    
    // DISPLAY
    printf("\n--- DISPLAY ARRAY ---");
    printf("\nArray elements: ");
    for(i=0; i<size; i++) {
        printf("%d ", arr[i]);
    }
    
    // INSERT
    printf("\n\n--- INSERT ELEMENT ---");
    printf("\nEnter number to insert: ");
    scanf("%d", &num);
    printf("Enter position: ");
    scanf("%d", &pos);
    
    arr[pos-1] = num;
    printf("Inserted successfully!");
    
    // DISPLAY AGAIN
    printf("\nNew array: ");
    for(i=0; i<size; i++) {
        printf("%d ", arr[i]);
    }
    
    // SEARCH
    printf("\n\n--- SEARCH ELEMENT ---");
    printf("\nEnter number to search: ");
    scanf("%d", &num);
    for(i=0; i<size; i++) {
        if(arr[i] == num) {
            printf("Found at position %d", i+1);
        }
    }
    
    printf("\nProgram ended!");
    return 0;
}