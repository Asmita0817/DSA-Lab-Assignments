#include<stdio.h>
#include<stdlib.h>

struct Node {
    int coeff;
    int power;
    struct Node* next;
};

void simplePolynomialAddition() {
    printf("Simple Polynomial Addition:\n\n");
    
    // Polynomial 1: 5x^2 + 4x^1 + 2x^0
    printf("Polynomial 1: 5x^2 + 4x^1 + 2x^0\n");
    printf("In list format: [[5, 2], [4, 1], [2, 0]]\n\n");
    
    // Polynomial 2: 5x^1 + 5x^0  
    printf("Polynomial 2: 5x^1 + 5x^0\n");
    printf("In list format: [[5, 1], [5, 0]]\n\n");
    
    // Manual addition
    printf("Adding coefficients for same powers:\n");
    printf("x^2: 5 (from poly1) + 0 (from poly2) = 5\n");
    printf("x^1: 4 (from poly1) + 5 (from poly2) = 9\n");
    printf("x^0: 2 (from poly1) + 5 (from poly2) = 7\n\n");
    
    printf("Result: 5x^2 + 9x^1 + 7x^0\n");
    printf("In list format: [[5, 2], [9, 1], [7, 0]]\n");
}

int main() {
    simplePolynomialAddition();
    return 0;
}
