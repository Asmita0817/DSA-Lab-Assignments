#include<stdio.h>
#include<stdlib.h>

struct Node {
    int data;
    struct Node* next;
};

void countAndDelete() {
    // Create sample linked list: 1->2->1->2->1->3->1
    struct Node* head = NULL;
    int arr[] = {1, 2, 1, 2, 1, 3, 1};
    int n = 7;
    
    // Build linked list
    for(int i=n-1; i>=0; i--) {
        struct Node* newNode = (struct Node*)malloc(sizeof(struct Node));
        newNode->data = arr[i];
        newNode->next = head;
        head = newNode;
    }
    
    printf("Original List: ");
    struct Node* temp = head;
    while(temp != NULL) {
        printf("%d -> ", temp->data);
        temp = temp->next;
    }
    printf("NULL\n");
    
    // Count occurrences of key=1
    int key = 1, count = 0;
    temp = head;
    while(temp != NULL) {
        if(temp->data == key) count++;
        temp = temp->next;
    }
    printf("Count of %d: %d\n", key, count);
    
    // Delete all occurrences of key
    // Remove from beginning if needed
    while(head != NULL && head->data == key) {
        struct Node* toDelete = head;
        head = head->next;
        free(toDelete);
    }
    
    // Remove from middle/end
    if(head != NULL) {
        struct Node* current = head;
        while(current->next != NULL) {
            if(current->next->data == key) {
                struct Node* toDelete = current->next;
                current->next = current->next->next;
                free(toDelete);
            } else {
                current = current->next;
            }
        }
    }
    
    printf("Updated List: ");
    temp = head;
    while(temp != NULL) {
        printf("%d -> ", temp->data);
        temp = temp->next;
    }
    printf("NULL\n");
}

int main() {
    countAndDelete();
    return 0;
}
