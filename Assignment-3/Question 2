#include<stdio.h>
#include<string.h>
#define SIZE 100

char stack[SIZE];
int top = -1;

void push(char c) {
    if(top == SIZE-1) {
        printf("Stack full!\n");
    } else {
        top++;
        stack[top] = c;
    }
}

char pop() {
    if(top == -1) {
        return '\0';
    } else {
        return stack[top--];
    }
}

int main() {
    char str[100];
    printf("Enter a string: ");
    scanf("%s", str);
    
    printf("Original string: %s\n", str);
    
    // Push all characters to stack
    for(int i=0; i<strlen(str); i++) {
        push(str[i]);
    }
    
    // Pop all characters (this reverses the string)
    printf("Reversed string: ");
    for(int i=0; i<strlen(str); i++) {
        printf("%c", pop());
    }
    printf("\n");
    
    return 0;
}
