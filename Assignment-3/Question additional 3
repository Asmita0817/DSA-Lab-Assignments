#include<stdio.h>

int main() {
    int arr[] = {4, 5, 2, 10, 8};
    int n = 5;
    int result[5];
    
    printf("Array: ");
    for(int i=0; i<n; i++) {
        printf("%d ", arr[i]);
    }
    printf("\n");
    
    for(int i=0; i<n; i++) {
        result[i] = -1;
        for(int j=i+1; j<n; j++) {
            if(arr[j] > arr[i]) {
                result[i] = arr[j];
                break;
            }
        }
    }
    
    printf("Next greater: ");
    for(int i=0; i<n; i++) {
        printf("%d ", result[i]);
    }
    printf("\n");
    
    return 0;
}
