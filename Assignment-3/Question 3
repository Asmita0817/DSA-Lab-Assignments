#include<stdio.h>
#include<string.h>
#define SIZE 100

char stack[SIZE];
int top = -1;

void push(char c) {
    top++;
    stack[top] = c;
}

char pop() {
    return stack[top--];
}

int main() {
    char expr[100];
    printf("Enter expression: ");
    scanf("%s", expr);
    
    int balanced = 1;
    
    for(int i=0; i<strlen(expr); i++) {
        if(expr[i] == '(' || expr[i] == '{' || expr[i] == '[') {
            push(expr[i]);
        }
        else if(expr[i] == ')' || expr[i] == '}' || expr[i] == ']') {
            if(top == -1) {
                balanced = 0;
                break;
            }
            
            char topChar = pop();
            if((expr[i] == ')' && topChar != '(') ||
               (expr[i] == '}' && topChar != '{') ||
               (expr[i] == ']' && topChar != '[')) {
                balanced = 0;
                break;
            }
        }
    }
    
    if(top != -1) balanced = 0;
    
    if(balanced) {
        printf("Expression has balanced parentheses\n");
    } else {
        printf("Expression has unbalanced parentheses\n");
    }
    
    return 0;
}#include<stdio.h>
#include<string.h>
