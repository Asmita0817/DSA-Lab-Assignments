#include<stdio.h>
#include<string.h>

int main() {
    char str1[50] = "Hello";
    char str2[50] = "World";
    char str3[50] = "Programming";
    char str4[50] = "Education";
    char temp;
    int i, j, len;
    
    // 4a) Concatenate Strings
    printf("4a) Concatenate Strings:\n");
    printf("String 1: %s\n", str1);
    printf("String 2: %s\n", str2);
    strcat(str1, str2);
    printf("After concatenation: %s\n\n", str1);
    
    // 4b) Reverse a String
    printf("4b) Reverse a String:\n");
    char rev[] = "Hello";
    printf("Original: %s\n", rev);
    len = strlen(rev);
    for(i=0, j=len-1; i<j; i++, j--) {
        temp = rev[i];
        rev[i] = rev[j];
        rev[j] = temp;
    }
    printf("Reversed: %s\n\n", rev);
    
    // 4c) Delete Vowels
    printf("4c) Delete Vowels:\n");
    char vowels[] = "Hello World";
    char result[50];
    int k = 0;
    printf("Original: %s\n", vowels);
    for(i=0; vowels[i] != '\0'; i++) {
        char c = vowels[i];
        if(!(c=='a'||c=='e'||c=='i'||c=='o'||c=='u'||
             c=='A'||c=='E'||c=='I'||c=='O'||c=='U')) {
            result[k] = c;
            k++;
        }
    }
    result[k] = '\0';
    printf("Without vowels: %s\n\n", result);
    
    // 4d) Sort Strings Alphabetically
    printf("4d) Sort Strings:\n");
    char names[][20] = {"Banana", "Apple", "Cherry", "Date"};
    int n = 4;
    printf("Before sorting: ");
    for(i=0; i<n; i++) {
        printf("%s ", names[i]);
    }
    
    // Simple sorting
    for(i=0; i<n-1; i++) {
        for(j=i+1; j<n; j++) {
            if(strcmp(names[i], names[j]) > 0) {
                char tempStr[20];
                strcpy(tempStr, names[i]);
                strcpy(names[i], names[j]);
                strcpy(names[j], tempStr);
            }
        }
    }
    
    printf("\nAfter sorting: ");
    for(i=0; i<n; i++) {
        printf("%s ", names[i]);
    }
    printf("\n\n");
    
    // 4e) Uppercase to Lowercase
    printf("4e) Uppercase to Lowercase:\n");
    char upper[] = "HELLO";
    printf("Uppercase: %s\n", upper);
    for(i=0; upper[i] != '\0'; i++) {
        if(upper[i] >= 'A' && upper[i] <= 'Z') {
            upper[i] = upper[i] + 32;
        }
    }
    printf("Lowercase: %s\n", upper);
    
    return 0;
}
