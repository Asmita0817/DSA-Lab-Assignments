#include<stdio.h>

int main() {
    int arr[] = {0, 1, 2, 0, 1, 2};
    int n = 6;
    int count0 = 0, count1 = 0, count2 = 0;
    
    printf("Original array: ");
    for(int i=0; i<n; i++) {
        printf("%d ", arr[i]);
    }
    
    // Count occurrences
    for(int i=0; i<n; i++) {
        if(arr[i] == 0) count0++;
        else if(arr[i] == 1) count1++;
        else count2++;
    }
    
    printf("\n\nCount - 0s: %d, 1s: %d, 2s: %d\n", count0, count1, count2);
    
    // Reconstruct array
    int index = 0;
    
    // Fill 0s
    for(int i=0; i<count0; i++) {
        arr[index++] = 0;
    }
    // Fill 1s
    for(int i=0; i<count1; i++) {
        arr[index++] = 1;
    }
    // Fill 2s
    for(int i=0; i<count2; i++) {
        arr[index++] = 2;
    }
    
    printf("Sorted array:   ");
    for(int i=0; i<n; i++) {
        printf("%d ", arr[i]);
    }
    printf("\n");
    
    return 0;
}
