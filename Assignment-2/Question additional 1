#include<stdio.h>

int main() {
    int arr[] = {1, 5, 3, 4, 2};
    int n = 5, k = 2;
    int count = 0;
    
    printf("Array: ");
    for(int i=0; i<n; i++) {
        printf("%d ", arr[i]);
    }
    printf("\nK = %d\n", k);
    
    printf("\nPairs with difference %d:\n", k);
    for(int i=0; i<n-1; i++) {
        for(int j=i+1; j<n; j++) {
            if(arr[i]-arr[j] == k || arr[j]-arr[i] == k) {
                printf("(%d,%d) = %d and %d\n", i, j, arr[i], arr[j]);
                count++;
            }
        }
    }
    
    printf("\nTotal pairs: %d\n", count);
    return 0;
}
